<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.wizard.view.form</field>
        <field name="model">sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Sale Order">
                <sheet>
                    <group>
                        <field name="xml_file" accept="*.xml"/>
                    </group>
                    <footer>
                        <button name="import_xml" string="Submit" class="oe_highlight" type="object" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
